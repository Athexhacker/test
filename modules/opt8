#!/bin/bash
# Written in Bash
# "ONLY FOR EDUCATIONAL PURPOSE"
# OPTION 8: DUMP CPU INFORMATION - ANDRO-EYE

# Color codes
RED='\033[0;91m'
GREEN='\033[0;92m'
YELLOW='\033[0;93m'
BLUE='\033[0;94m'
PURPLE='\033[0;95m'
CYAN='\033[0;96m'
WHITE='\033[0;97m'
NC='\033[0m' # No Color
BOLD='\033[1m'
UNDERLINE='\033[4m'
BLINK='\033[5m'

# Animation functions
loading_animation() {
    local message=$1
    local chars="â ‹â ™â ¹â ¸â ¼â ´â ¦â §â ‡â "
    
    echo -ne "${CYAN}${BOLD}$message ${NC}"
    for i in {1..15}; do
        for char in $(echo $chars | grep -o .); do
            echo -ne "${YELLOW}${BOLD}$char${NC}"
            sleep 0.05
            echo -ne "\b"
        done
    done
    echo -e "${GREEN}${BOLD} Done! ${NC}"
}

progress_bar() {
    local duration=$1
    local message=$2
    local width=40
    
    echo -ne "${BLUE}${BOLD}$message ${NC}"
    for ((i=0; i<=width; i++)); do
        local percent=$((i * 100 / width))
        echo -ne "\r${BLUE}${BOLD}$message ${NC}["
        for ((j=0; j<i; j++)); do echo -ne "${GREEN}â–“${NC}"; done
        for ((j=i; j<width; j++)); do echo -ne "${WHITE}â–‘${NC}"; done
        echo -ne "] ${percent}%"
        sleep $(echo "scale=2; $duration/width" | bc 2>/dev/null || echo "0.05")
    done
    echo -e "\n"
}

sparkle_effect() {
    echo -ne "${YELLOW}"
    for i in {1..15}; do
        echo -ne "âœ¦"
        sleep 0.03
    done
    echo -e "${NC}"
}

pulse_message() {
    local message=$1
    local color=$2
    
    for i in {1..3}; do
        echo -ne "${color}${BOLD}$message${NC}"
        sleep 0.2
        echo -ne "\r"
        for j in $(seq 1 ${#message}); do
            echo -n " "
        done
        echo -ne "\r"
        sleep 0.2
    done
    echo -e "${color}${BOLD}$message${NC}"
}

# Function to display device in a box
display_device_box() {
    local number=$1
    local device=$2
    local model=$3
    local status=$4
    
    echo -e "${YELLOW}${BOLD}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}  ${GREEN}${BOLD}DEVICE #${number}${NC}                                        ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${CYAN}ID:${NC} ${WHITE}${device:0:15}...${NC}                     ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${PURPLE}Model:${NC} ${WHITE}$model${NC}                                 ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${BLUE}Status:${NC} $status                           ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
}

# Function to parse and display CPU info summary
display_cpu_summary() {
    local file=$1
    
    if [ -f "$file" ]; then
        echo -e "\n${CYAN}${BOLD}âš¡ CPU Information Summary:${NC}"
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
        
        # Extract load average
        local load=$(grep "Load:" "$file" | head -1)
        if [ -n "$load" ]; then
            echo -e "  ${GREEN}â€¢${NC} ${WHITE}$load${NC}"
        fi
        
        # Extract CPU usage percentages
        local cpu_usage=$(grep -A 10 "CPU usage" "$file" | head -5)
        if [ -n "$cpu_usage" ]; then
            echo -e "\n  ${YELLOW}Top CPU consumers:${NC}"
            echo "$cpu_usage" | grep -v "CPU usage" | head -3 | while read line; do
                if [ -n "$line" ]; then
                    echo -e "    ${RED}â¤${NC} ${WHITE}$line${NC}"
                fi
            done
        fi
        
        # Count total processes
        local total_proc=$(grep -c "proc=" "$file")
        if [ $total_proc -gt 0 ]; then
            echo -e "\n  ${GREEN}â€¢${NC} ${WHITE}Total processes: ${YELLOW}$total_proc${NC}"
        fi
        
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    fi
}

# Function to show dump file info
show_dump_info() {
    local file=$1
    local model=$2
    
    if [ -f "$file" ]; then
        local size=$(du -h "$file" | cut -f1)
        local lines=$(wc -l < "$file")
        local timestamp=$(echo "$file" | grep -o '[0-9]\{2\}:[0-9]\{2\}:[0-9]\{2\}')
        
        echo -e "\n${CYAN}${BOLD}ğŸ“Š CPU Dump Statistics:${NC}"
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}Device:${NC} ${YELLOW}$model${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}File:${NC} ${YELLOW}$(basename "$file")${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}Size:${NC} ${YELLOW}$size${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}Lines:${NC} ${YELLOW}$lines${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}Time:${NC} ${YELLOW}$timestamp${NC}"
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    fi
}

# Function to dump CPU info
dump_cpu_info() {
    local device=$1
    local model=$2
    local device_num=$3
    
    # Create dump directory if it doesn't exist
    mkdir -p sys-dump-info 2>/dev/null
    
    local timestamp=$(date +"%H-%M-%S")
    local dump_file="sys-dump-info/cpu-info-${model}-${timestamp}.dump"
    local temp_file=".temp/cpu_dump_${timestamp}.tmp"
    
    echo -e "\n${YELLOW}${BOLD}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo -e "${PURPLE}${BOLD}âš¡ Dumping CPU Information for:${NC}"
    display_device_box "$device_num" "$device" "$model" "${GREEN}â— Processing${NC}"
    
    # Check device connection
    echo -e "\n${BLUE}${BOLD}ğŸ” Verifying device connection...${NC}"
    if ! adb -s "$device" get-state &>/dev/null; then
        pulse_message "âŒ Device not responding!" "${RED}"
        return 1
    fi
    echo -e "${GREEN}${BOLD}âœ“ Device connected${NC}"
    
    # Get CPU info directly for preview
    echo -e "\n${CYAN}${BOLD}ğŸ“¡ Fetching real-time CPU information...${NC}"
    
    # Show real-time CPU info while collecting full dump
    echo -e "\n${YELLOW}${BOLD}Live CPU Stats (updating):${NC}"
    adb -s "$device" shell dumpsys cpuinfo | head -15 &
    local preview_pid=$!
    sleep 3
    kill $preview_pid 2>/dev/null
    
    # Start full dump process
    echo -e "\n\n${CYAN}${BOLD}âš¡ Collecting complete CPU information...${NC}"
    echo -e "${WHITE}This may take 5-10 seconds${NC}\n"
    
    # Run dumpsys in background with progress indicator
    adb -s "$device" shell dumpsys cpuinfo > "$temp_file" 2>/dev/null &
    local pid=$!
    
    # Show progress while dumping
    local spin='-\|/'
    local i=0
    local counter=0
    
    while kill -0 $pid 2>/dev/null; do
        i=$(( (i+1) % 4 ))
        counter=$((counter + 1))
        
        # Show different messages based on time
        if [ $counter -lt 5 ]; then
            echo -ne "\r${YELLOW}${BOLD}â³ Reading CPU data ${spin:$i:1} ${NC}"
        elif [ $counter -lt 10 ]; then
            echo -ne "\r${YELLOW}${BOLD}â³ Analyzing CPU cores ${spin:$i:1} ${NC}"
        else
            echo -ne "\r${YELLOW}${BOLD}â³ Finalizing ${spin:$i:1} ${NC}"
        fi
        
        sleep 0.5
    done
    
    # Wait for process to complete
    wait $pid 2>/dev/null
    
    # Check if dump was successful
    if [ -s "$temp_file" ]; then
        # Move temp file to final location
        mv "$temp_file" "$dump_file"
        
        echo -e "\r${GREEN}${BOLD}âœ… CPU dump completed successfully!${NC}          \n"
        
        # Show file info
        show_dump_info "$dump_file" "$model"
        
        # Display CPU summary
        display_cpu_summary "$dump_file"
        
        # Ask if user wants to view full dump
        echo -ne "\n${YELLOW}${BOLD}â“ View full CPU dump? ${WHITE}(y/N) ${YELLOW}â¤ ${RED}"
        read view_choice
        echo -ne "${NC}"
        
        case ${view_choice,,} in
            y|yes)
                echo -e "\n${BLUE}${BOLD}ğŸ“„ Opening CPU dump with less pager...${NC}"
                echo -e "${CYAN}${BOLD}Press 'q' to exit, '/' to search${NC}\n"
                sleep 1
                
                if command -v less &>/dev/null; then
                    less "$dump_file"
                else
                    cat "$dump_file" | more
                fi
                
                echo -e "\n${GREEN}${BOLD}âœ… Viewer closed${NC}"
                ;;
        esac
        
        # Ask if user wants to monitor CPU in real-time
        echo -ne "\n${YELLOW}${BOLD}â“ Monitor CPU in real-time? ${WHITE}(y/N) ${YELLOW}â¤ ${RED}"
        read monitor_choice
        echo -ne "${NC}"
        
        case ${monitor_choice,,} in
            y|yes)
                echo -e "\n${PURPLE}${BOLD}ğŸ“Š Real-time CPU Monitor (Ctrl+C to stop)${NC}"
                echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
                sleep 2
                adb -s "$device" shell top -n 1 -d 1 | head -20
                echo -e "\n${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
                ;;
        esac
        
    else
        echo -e "\r${RED}${BOLD}âŒ CPU dump failed! No data collected${NC}          \n"
        rm -f "$temp_file" 2>/dev/null
    fi
    
    sparkle_effect
}

# Clear screen and show banner
clear
echo -e "${RED}${BOLD}"
cat << "EOF"
    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
    â•‘   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—    â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â•‘
    â•‘  â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘    â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•â•â•â•‘
    â•‘  â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘    â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ•— â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â•‘
    â•‘  â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•”â•â•â•â• â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘    â–ˆâ–ˆâ•”â•â•â•â• â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•  â•‘
    â•‘  â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘     â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•    â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘     â•‘
    â•‘   â•šâ•â•â•â•â•â•â•šâ•â•      â•šâ•â•â•â•â•â•     â•šâ•â•     â•šâ•â•â•šâ•â•  â•šâ•â•â•â•â•šâ•â•     â•‘
    â•‘                                                          â•‘
    â•‘        ğŸ”¥ ${GREEN}CPU INFORMATION DUMP${RED} - ${CYAN}Processor Analyzer${RED}          â•‘
    â•‘                                                          â•‘
    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
EOF
echo -e "${NC}"
sparkle_effect

# Create necessary directories
mkdir -p .temp sys-dump-info 2>/dev/null

## DEVICE ID EXTRACT ##
echo -e "\n${BLUE}${BOLD}ğŸ” Scanning for connected devices...${NC}"
loading_animation "Detecting devices"

# Check if ADB is working
if ! command -v adb &> /dev/null; then
    pulse_message "âŒ ADB not found! Please install ADB first." "${RED}"
    sleep 2
    bash modules/funtion.sh
    exit 1
fi

adb devices | sed -n '2,$p' | awk '{ print $1 }' > .temp/dev_list_temp 2>/dev/null

# Check if any devices found
if [ ! -s ".temp/dev_list_temp" ]; then
    echo -e "\n${RED}${BOLD}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${RED}${BOLD}â”‚${NC}  ${RED}${BLINK}âš ï¸${NC}  ${WHITE}NO DEVICES CONNECTED${NC}                       ${RED}${BOLD}â”‚${NC}"
    echo -e "${RED}${BOLD}â”‚${NC}      ${CYAN}Please connect a device to dump CPU info${NC}             ${RED}${BOLD}â”‚${NC}"
    echo -e "${RED}${BOLD}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    
    echo -e "\n${YELLOW}${BOLD}Press Enter to return to main menu...${NC}"
    read
    clear
    bash modules/funtion.sh
    exit 0
fi

# Read devices into array properly
mapfile -t dev < .temp/dev_list_temp 2>/dev/null

# Assign device variables with null checking
dev_1="${dev[0]:-}"
dev_2="${dev[1]:-}"
dev_3="${dev[2]:-}"

## DEVICE MODEL EXTRACT ##
adb devices -l | grep "model:" > .temp/dev_list_model_temp 2>/dev/null

# Extract models properly
mod_1=""
mod_2=""
mod_3=""

if [ -s ".temp/dev_list_model_temp" ]; then
    mapfile -t model_lines < .temp/dev_list_model_temp
    
    for i in "${!model_lines[@]}"; do
        model=$(echo "${model_lines[$i]}" | grep -o 'model:[^ ]*' | cut -d':' -f2)
        
        case $i in
            0) mod_1="$model" ;;
            1) mod_2="$model" ;;
            2) mod_3="$model" ;;
        esac
    done
fi

# Proper device count logic
total_dev=0
[ -n "$dev_1" ] && total_dev=1
[ -n "$dev_2" ] && total_dev=2
[ -n "$dev_3" ] && total_dev=3

# Function for device 1 dump
dev_1_dump() {
    dump_cpu_info "$dev_1" "${mod_1:-Unknown}" "1"
}

# Function for device 2 dump
dev_2_dump() {
    dump_cpu_info "$dev_2" "${mod_2:-Unknown}" "2"
}

# Function for device 3 dump
dev_3_dump() {
    dump_cpu_info "$dev_3" "${mod_3:-Unknown}" "3"
}

# Main device selection logic
echo -e "\n${GREEN}${BOLD}âœ… Scan Complete! Found ${WHITE}$total_dev${GREEN} device(s)${NC}\n"

# Show existing CPU dumps if any
if [ -d "sys-dump-info" ] && [ "$(ls -A sys-dump-info/cpu-info-* 2>/dev/null)" ]; then
    echo -e "${CYAN}${BOLD}ğŸ“ Existing CPU dumps:${NC}"
    ls -lh sys-dump-info/cpu-info-* 2>/dev/null | tail -n +1 | head -5 | while read line; do
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}$(basename "$line")${NC}"
    done
    echo -e "  ${YELLOW}(Use 'view' option after dump to see all)${NC}\n"
fi

case $total_dev in
    1)
        echo -e "${YELLOW}${BOLD}ğŸ“± Single device detected:${NC}\n"
        display_device_box "1" "$dev_1" "${mod_1:-Unknown}" "${GREEN}â— Ready${NC}"
        
        echo -e "\n${CYAN}${BOLD}Starting CPU dump automatically...${NC}"
        sleep 1
        dev_1_dump
        ;;
        
    2)
        echo -e "${YELLOW}${BOLD}ğŸ“± Multiple devices detected:${NC}\n"
        display_device_box "1" "$dev_1" "${mod_1:-Unknown}" "${GREEN}â— Ready${NC}"
        echo
        display_device_box "2" "$dev_2" "${mod_2:-Unknown}" "${GREEN}â— Ready${NC}"
        
        echo -e "\n${CYAN}${BOLD}Select device to dump CPU info:${NC}"
        while true; do
            echo -ne "\n${YELLOW}${BOLD}Enter device number (1-2) ${WHITE}â¤${NC} ${RED}"
            read options
            echo -ne "${NC}"
            
            case $options in
                1)
                    dev_1_dump
                    break
                    ;;
                2)
                    dev_2_dump
                    break
                    ;;
                *)
                    pulse_message "âŒ Invalid option! Choose 1 or 2" "${RED}"
                    ;;
            esac
        done
        ;;
        
    3)
        echo -e "${YELLOW}${BOLD}ğŸ“± Multiple devices detected:${NC}\n"
        display_device_box "1" "$dev_1" "${mod_1:-Unknown}" "${GREEN}â— Ready${NC}"
        echo
        display_device_box "2" "$dev_2" "${mod_2:-Unknown}" "${GREEN}â— Ready${NC}"
        echo
        display_device_box "3" "$dev_3" "${mod_3:-Unknown}" "${GREEN}â— Ready${NC}"
        
        echo -e "\n${CYAN}${BOLD}Select device to dump CPU info:${NC}"
        while true; do
            echo -ne "\n${YELLOW}${BOLD}Enter device number (1-3) ${WHITE}â¤${NC} ${RED}"
            read options
            echo -ne "${NC}"
            
            case $options in
                1)
                    dev_1_dump
                    break
                    ;;
                2)
                    dev_2_dump
                    break
                    ;;
                3)
                    dev_3_dump
                    break
                    ;;
                *)
                    pulse_message "âŒ Invalid option! Choose 1-3" "${RED}"
                    ;;
            esac
        done
        ;;
esac

# Clean up temp files
rm -f .temp/dev_list_temp .temp/dev_list_model_temp .temp/cpu_dump_*.tmp 2>/dev/null

# Return options
echo -e "\n${YELLOW}${BOLD}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e "${CYAN}${BOLD}â Options:${NC}"
echo -e "  ${GREEN}â€¢${NC} Press ${WHITE}ENTER${NC} to return to main menu"
echo -e "  ${GREEN}â€¢${NC} Type ${WHITE}'cpu'${NC} to dump another device"
echo -e "  ${GREEN}â€¢${NC} Type ${WHITE}'monitor'${NC} to monitor CPU in real-time"
echo -e "  ${GREEN}â€¢${NC} Type ${WHITE}'exit'${NC} to quit\n"

echo -ne "${YELLOW}${BOLD}â“ Your choice ${WHITE}â¤${NC} ${RED}"
read user_choice
echo -ne "${NC}"

case ${user_choice,,} in
    "cpu")
        echo -e "\n${PURPLE}${BOLD}ğŸ”„ Restarting CPU dump selection...${NC}"
        sleep 1
        clear
        bash modules/opt8
        ;;
    "monitor")
        echo -e "\n${PURPLE}${BOLD}ğŸ“Š Starting CPU monitor (Ctrl+C to stop)...${NC}"
        sleep 2
        clear
        echo -e "${GREEN}${BOLD}Live CPU Monitoring - Press Ctrl+C to exit${NC}\n"
        adb shell top -d 1 | head -20
        echo -e "\n${YELLOW}${BOLD}Press Enter to continue...${NC}"
        read
        clear
        bash modules/opt8
        ;;
    "exit"|"quit")
