#!/bin/bash
# Written in Bash
# "ONLY FOR EDUCATIONAL PURPOSE"
# OPTION 19: COPY ALL CAMERA PHOTOS - ANDRO-EYE

# Color codes
RED='\033[0;91m'
GREEN='\033[0;92m'
YELLOW='\033[0;93m'
BLUE='\033[0;94m'
PURPLE='\033[0;95m'
CYAN='\033[0;96m'
WHITE='\033[0;97m'
NC='\033[0m' # No Color
BOLD='\033[1m'
UNDERLINE='\033[4m'
BLINK='\033[5m'

# Animation functions
loading_animation() {
    local message=$1
    local chars="â ‹â ™â ¹â ¸â ¼â ´â ¦â §â ‡â "
    
    echo -ne "${CYAN}${BOLD}$message ${NC}"
    for i in {1..15}; do
        for char in $(echo $chars | grep -o .); do
            echo -ne "${YELLOW}${BOLD}$char${NC}"
            sleep 0.05
            echo -ne "\b"
        done
    done
    echo -e "${GREEN}${BOLD} Done! ${NC}"
}

progress_bar() {
    local duration=$1
    local message=$2
    local width=40
    
    echo -ne "${BLUE}${BOLD}$message ${NC}"
    for ((i=0; i<=width; i++)); do
        local percent=$((i * 100 / width))
        echo -ne "\r${BLUE}${BOLD}$message ${NC}["
        for ((j=0; j<i; j++)); do echo -ne "${GREEN}â–“${NC}"; done
        for ((j=i; j<width; j++)); do echo -ne "${WHITE}â–‘${NC}"; done
        echo -ne "] ${percent}%"
        sleep $(echo "scale=2; $duration/width" | bc 2>/dev/null || echo "0.05")
    done
    echo -e "\n"
}

sparkle_effect() {
    echo -ne "${YELLOW}"
    for i in {1..15}; do
        echo -ne "âœ¦"
        sleep 0.03
    done
    echo -e "${NC}"
}

pulse_message() {
    local message=$1
    local color=$2
    
    for i in {1..3}; do
        echo -ne "${color}${BOLD}$message${NC}"
        sleep 0.2
        echo -ne "\r"
        for j in $(seq 1 ${#message}); do
            echo -n " "
        done
        echo -ne "\r"
        sleep 0.2
    done
    echo -e "${color}${BOLD}$message${NC}"
}

# Function to display device in a box
display_device_box() {
    local number=$1
    local device=$2
    local model=$3
    local status=$4
    
    echo -e "${YELLOW}${BOLD}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}  ${GREEN}${BOLD}DEVICE #${number}${NC}                                        ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${CYAN}ID:${NC} ${WHITE}${device:0:15}...${NC}                     ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${PURPLE}Model:${NC} ${WHITE}$model${NC}                                 ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${BLUE}Status:${NC} $status                           ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
}

# Function to show pull statistics
show_pull_stats() {
    local dest_dir=$1
    local source=$2
    
    if [ -d "$dest_dir" ]; then
        local file_count=$(find "$dest_dir" -type f 2>/dev/null | wc -l)
        local total_size=$(du -sh "$dest_dir" 2>/dev/null | cut -f1)
        local latest_file=$(find "$dest_dir" -type f -printf '%T@ %p\n' 2>/dev/null | sort -n | tail -1 | cut -d' ' -f2-)
        
        echo -e "\n${CYAN}${BOLD}ğŸ“Š Transfer Statistics:${NC}"
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}Files transferred: ${YELLOW}$file_count${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}Total size: ${YELLOW}$total_size${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}Destination: ${YELLOW}$dest_dir${NC}"
        if [ -n "$latest_file" ] && [ -f "$latest_file" ]; then
            echo -e "  ${GREEN}â€¢${NC} ${WHITE}Latest file: ${YELLOW}$(basename "$latest_file")${NC}"
        fi
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    fi
}

# Function to preview media files
preview_media() {
    local dir=$1
    
    if [ -d "$dir" ]; then
        local image_count=$(find "$dir" -type f \( -iname "*.jpg" -o -iname "*.jpeg" -o -iname "*.png" -o -iname "*.gif" \) 2>/dev/null | wc -l)
        local video_count=$(find "$dir" -type f \( -iname "*.mp4" -o -iname "*.3gp" -o -iname "*.mov" \) 2>/dev/null | wc -l)
        
        echo -e "\n${YELLOW}${BOLD}ğŸ–¼ï¸  Media Summary:${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}Photos: ${YELLOW}$image_count${NC}"
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}Videos: ${YELLOW}$video_count${NC}"
        
        # Show sample of files
        if [ $image_count -gt 0 ]; then
            echo -e "\n${CYAN}${BOLD}Sample photos:${NC}"
            find "$dir" -type f -iname "*.jpg" -o -iname "*.jpeg" -o -iname "*.png" | head -3 | while read file; do
                echo -e "  ${GREEN}ğŸ“¸${NC} ${WHITE}$(basename "$file")${NC}"
            done
        fi
    fi
}

# Function to pull DCIM folder
pull_dcim() {
    local device=$1
    local model=$2
    local device_num=$3
    
    echo -e "\n${YELLOW}${BOLD}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo -e "${PURPLE}${BOLD}ğŸ“¸ Copying camera photos from:${NC}"
    display_device_box "$device_num" "$device" "$model" "${GREEN}â— Processing${NC}"
    
    # Check device connection
    echo -e "\n${BLUE}${BOLD}ğŸ” Verifying device connection...${NC}"
    if ! adb -s "$device" get-state &>/dev/null; then
        pulse_message "âŒ Device not responding!" "${RED}"
        return 1
    fi
    echo -e "${GREEN}${BOLD}âœ“ Device connected${NC}"
    
    # Check if DCIM folder exists
    echo -e "\n${BLUE}${BOLD}ğŸ” Checking for DCIM folder...${NC}"
    if ! adb -s "$device" shell test -d /sdcard/DCIM; then
        echo -e "${YELLOW}${BOLD}âš ï¸  DCIM folder not found at standard location${NC}"
        echo -e "${WHITE}Trying alternative locations...${NC}"
        
        # Try alternative locations
        if adb -s "$device" shell test -d /storage/emulated/0/DCIM; then
            echo -e "${GREEN}${BOLD}âœ“ Found DCIM at /storage/emulated/0/DCIM${NC}"
            remote_path="/storage/emulated/0/DCIM"
        else
            pulse_message "âŒ Could not find DCIM folder" "${RED}"
            return 1
        fi
    else
        echo -e "${GREEN}${BOLD}âœ“ DCIM folder found${NC}"
        remote_path="/sdcard/DCIM"
    fi
    
    # Count files before pulling
    echo -e "\n${BLUE}${BOLD}ğŸ“Š Analyzing DCIM folder...${NC}"
    local file_count=$(adb -s "$device" shell find "$remote_path" -type f 2>/dev/null | wc -l)
    local total_size=$(adb -s "$device" shell du -sh "$remote_path" 2>/dev/null | awk '{print $1}')
    
    echo -e "  ${GREEN}â€¢${NC} ${WHITE}Files found: ${YELLOW}$file_count${NC}"
    echo -e "  ${GREEN}â€¢${NC} ${WHITE}Total size: ${YELLOW}${total_size:-Unknown}${NC}"
    
    if [ "$file_count" -eq 0 ]; then
        echo -e "\n${YELLOW}${BOLD}âš ï¸  No files found in DCIM folder${NC}"
        return 0
    fi
    
    # Create destination directory
    local safe_id=$(echo "$device" | tr -d '[:punct:]' | cut -c1-8)
    local base_dir="$PWD/device-pull/${model}-${safe_id}"
    local timestamp=$(date +"%Y%m%d_%H-%M-%S")
    local dest_dir="${base_dir}/DCIM-${timestamp}"
    
    mkdir -p "$dest_dir" 2>/dev/null
    
    echo -e "\n${CYAN}${BOLD}ğŸ“‚ Destination: ${WHITE}$dest_dir${NC}"
    
    # Confirm before proceeding
    echo -ne "\n${YELLOW}${BOLD}â“ Start copying ${file_count} files (${total_size})? ${WHITE}(Y/n) ${YELLOW}â¤ ${RED}"
    read confirm
    echo -ne "${NC}"
    
    case ${confirm,,} in
        n|no)
            echo -e "\n${BLUE}${BOLD}â© Copy cancelled${NC}"
            return 0
            ;;
    esac
    
    # Start pulling files
    echo -e "\n${PURPLE}${BOLD}â¬‡ï¸  Copying files from device...${NC}"
    echo -e "${YELLOW}${BOLD}This may take a while depending on file count${NC}\n"
    
    # Run pull in background with progress
    (
        adb -s "$device" pull "$remote_path" "$dest_dir/" > .temp/pull_output.tmp 2>&1
    ) &
    
    local pid=$!
    local spin='-\|/'
    local i=0
    
    # Show progress while pulling
    while kill -0 $pid 2>/dev/null; do
        i=$(( (i+1) % 4 ))
        
        # Check if there's any progress info
        if [ -f ".temp/pull_output.tmp" ]; then
            local current_file=$(tail -1 .temp/pull_output.tmp 2>/dev/null | grep -o '[^/]*$' | cut -c1-50)
            if [ -n "$current_file" ]; then
                printf "\r${YELLOW}${BOLD}â³ Copying: ${WHITE}%-50s ${spin:$i:1}${NC}" "${current_file:0:50}"
            else
                printf "\r${YELLOW}${BOLD}â³ Copying files ${spin:$i:1}${NC}"
            fi
        else
            printf "\r${YELLOW}${BOLD}â³ Copying files ${spin:$i:1}${NC}"
        fi
        
        sleep 0.5
    done
    
    wait $pid 2>/dev/null
    local result=$?
    
    if [ $result -eq 0 ]; then
        echo -e "\r${GREEN}${BOLD}âœ… Copy completed successfully!          ${NC}\n"
        
        # Show statistics
        show_pull_stats "$dest_dir" "$remote_path"
        
        # Preview media
        preview_media "$dest_dir"
        
        # Ask if user wants to open the folder
        echo -ne "\n${YELLOW}${BOLD}â“ Open destination folder? ${WHITE}(y/N) ${YELLOW}â¤ ${RED}"
        read folder_choice
        echo -ne "${NC}"
        
        case ${folder_choice,,} in
            y|yes)
                if command -v xdg-open &>/dev/null; then
                    xdg-open "$dest_dir"
                elif command -v open &>/dev/null; then
                    open "$dest_dir"
                else
                    echo -e "${YELLOW}${BOLD}Folder: ${WHITE}$dest_dir${NC}"
                fi
                ;;
        esac
        
        # Ask if user wants to view sample images
        echo -ne "\n${YELLOW}${BOLD}â“ View sample images? ${WHITE}(y/N) ${YELLOW}â¤ ${RED}"
        read view_choice
        echo -ne "${NC}"
        
        case ${view_choice,,} in
            y|yes)
                local sample_images=$(find "$dest_dir" -type f -iname "*.jpg" -o -iname "*.jpeg" -o -iname "*.png" 2>/dev/null | head -3)
                if [ -n "$sample_images" ]; then
                    echo -e "\n${CYAN}${BOLD}Sample images:${NC}"
                    echo "$sample_images" | while read img; do
                        echo -e "  ${GREEN}â€¢${NC} ${WHITE}$(basename "$img")${NC}"
                    done
                else
                    echo -e "\n${YELLOW}${BOLD}No images found to preview${NC}"
                fi
                ;;
        esac
        
    else
        echo -e "\r${RED}${BOLD}âŒ Copy failed!${NC}\n"
        
        # Show error if available
        if [ -f ".temp/pull_output.tmp" ]; then
            local error=$(grep -i "error\|failed" .temp/pull_output.tmp | head -1)
            if [ -n "$error" ]; then
                echo -e "${RED}${BOLD}Error: ${WHITE}$error${NC}"
            fi
        fi
    fi
    
    # Cleanup
    rm -f .temp/pull_output.tmp
    
    sparkle_effect
}

# Clear screen and show banner
clear
echo -e "${YELLOW}${BOLD}"
cat << "EOF"
    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
    â•‘   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—      â•‘
    â•‘  â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—     â•‘
    â•‘  â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ–ˆâ–ˆâ•”â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘     â•‘
    â•‘  â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•  â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘     â•‘
    â•‘  â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ•â• â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘     â•‘
    â•‘   â•šâ•â•â•â•â•â•â•šâ•â•  â•šâ•â•â•šâ•â•     â•šâ•â•â•šâ•â•â•â•â•â•â•â•šâ•â•  â•šâ•â•â•šâ•â•  â•šâ•â•     â•‘
    â•‘                                                          â•‘
    â•‘        ğŸ“· ${GREEN}CAMERA PHOTO COPY${YELLOW} - ${CYAN}DCIM Downloader${YELLOW}               â•‘
    â•‘                                                          â•‘
    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
EOF
echo -e "${NC}"
sparkle_effect

# Create necessary directories
mkdir -p .temp device-pull 2>/dev/null

## DEVICE ID EXTRACT ##
echo -e "\n${BLUE}${BOLD}ğŸ” Scanning for connected devices...${NC}"
loading_animation "Detecting devices"

# Check if ADB is working
if ! command -v adb &> /dev/null; then
    pulse_message "âŒ ADB not found! Please install ADB first." "${RED}"
    sleep 2
    bash modules/funtion.sh
    exit 1
fi

adb devices | sed -n '2,$p' | awk '{ print $1 }' > .temp/dev_list_temp 2>/dev/null

# Check if any devices found
if [ ! -s ".temp/dev_list_temp" ]; then
    echo -e "\n${RED}${BOLD}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${RED}${BOLD}â”‚${NC}  ${RED}${BLINK}âš ï¸${NC}  ${WHITE}NO DEVICES CONNECTED${NC}                       ${RED}${BOLD}â”‚${NC}"
    echo -e "${RED}${BOLD}â”‚${NC}      ${CYAN}Please connect a device to copy camera photos${NC}           ${RED}${BOLD}â”‚${NC}"
    echo -e "${RED}${BOLD}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    
    echo -e "\n${YELLOW}${BOLD}Press Enter to return to main menu...${NC}"
    read
    clear
    bash modules/funtion.sh
    exit 0
fi

# Read devices into array properly
mapfile -t dev < .temp/dev_list_temp 2>/dev/null

# Assign device variables with null checking
dev_1="${dev[0]:-}"
dev_2="${dev[1]:-}"
dev_3="${dev[2]:-}"

## DEVICE MODEL EXTRACT ##
adb devices -l | grep "model:" > .temp/dev_list_model_temp 2>/dev/null

# Extract models properly
mod_1=""
mod_2=""
mod_3=""

if [ -s ".temp/dev_list_model_temp" ]; then
    mapfile -t model_lines < .temp/dev_list_model_temp
    
    for i in "${!model_lines[@]}"; do
        model=$(echo "${model_lines[$i]}" | grep -o 'model:[^ ]*' | cut -d':' -f2)
        
        case $i in
            0) mod_1="$model" ;;
            1) mod_2="$model" ;;
            2) mod_3="$model" ;;
        esac
    done
fi

# Proper device count logic
total_dev=0
[ -n "$dev_1" ] && total_dev=1
[ -n "$dev_2" ] && total_dev=2
[ -n "$dev_3" ] && total_dev=3

# Show existing pulls count
if [ -d "device-pull" ]; then
    pull_count=$(find device-pull -type d -name "DCIM-*" 2>/dev/null | wc -l)
    if [ "$pull_count" -gt 0 ]; then
        echo -e "\n${CYAN}${BOLD}ğŸ“ Previous camera copies: ${WHITE}$pull_count${NC}"
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
        ls -ld device-pull/*/DCIM-* 2>/dev/null | tail -n +1 | head -3 | while read line; do
            echo -e "  ${GREEN}â€¢${NC} ${WHITE}$(basename $(dirname "$line"))/$(basename "$line")${NC}"
        done
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}\n"
    fi
fi

# Main device selection logic
echo -e "\n${GREEN}${BOLD}âœ… Scan Complete! Found ${WHITE}$total_dev${GREEN} device(s)${NC}\n"

case $total_dev in
    1)
        echo -e "${YELLOW}${BOLD}ğŸ“± Single device detected:${NC}\n"
        display_device_box "1" "$dev_1" "${mod_1:-Unknown}" "${GREEN}â— Ready${NC}"
        
        echo -e "\n${CYAN}${BOLD}Starting camera photo copy...${NC}"
        sleep 1
        pull_dcim "$dev_1" "${mod_1:-Unknown}" "1"
        ;;
        
    2)
        echo -e "${YELLOW}${BOLD}ğŸ“± Multiple devices detected:${NC}\n"
        display_device_box "1" "$dev_1" "${mod_1:-Unknown}" "${GREEN}â— Ready${NC}"
        echo
        display_device_box "2" "$dev_2" "${mod_2:-Unknown}" "${GREEN}â— Ready${NC}"
        
        echo -e "\n${CYAN}${BOLD}Select device to copy camera photos:${NC}"
        while true; do
            echo -ne "\n${YELLOW}${BOLD}Enter device number (1-2) ${WHITE}â¤${NC} ${RED}"
            read options
            echo -ne "${NC}"
            
            case $options in
                1)
                    pull_dcim "$dev_1" "${mod_1:-Unknown}" "1"
                    break
                    ;;
                2)
                    pull_dcim "$dev_2" "${mod_2:-Unknown}" "2"
                    break
                    ;;
                *)
                    pulse_message "âŒ Invalid option! Choose 1 or 2" "${RED}"
                    ;;
            esac
        done
        ;;
        
    3)
        echo -e "${YELLOW}${BOLD}ğŸ“± Multiple devices detected:${NC}\n"
        display_device_box "1" "$dev_1" "${mod_1:-Unknown}" "${GREEN}â— Ready${NC}"
        echo
        display_device_box "2" "$dev_2" "${mod_2:-Unknown}" "${GREEN}â— Ready${NC}"
        echo
        display_device_box "3" "$dev_3" "${mod_3:-Unknown}" "${GREEN}â— Ready${NC}"
        
        echo -e "\n${CYAN}${BOLD}Select device to copy camera photos:${NC}"
        while true; do
            echo -ne "\n${YELLOW}${BOLD}Enter device number (1-3) ${WHITE}â¤${NC} ${RED}"
            read options
            echo -ne "${NC}"
            
            case $options in
                1)
                    pull_dcim "$dev_1" "${mod_1:-Unknown}" "1"
                    break
                    ;;
                2)
                    pull_dcim "$dev_2" "${mod_2:-Unknown}" "2"
                    break
                    ;;
                3)
                    pull_dcim "$dev_3" "${mod_3:-Unknown}" "3"
                    break
                    ;;
                *)
                    pulse_message "âŒ Invalid option! Choose 1-3" "${RED}"
                    ;;
            esac
        done
        ;;
esac

# Clean up temp files
rm -f .temp/dev_list_temp .temp/dev_list_model_temp 2>/dev/null

# Return options
echo -e "\n${YELLOW}${BOLD}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e "${CYAN}${BOLD}â Options:${NC}"
echo -e "  ${GREEN}â€¢${NC} Press ${WHITE}ENTER${NC} to return to main menu"
echo -e "  ${GREEN}â€¢${NC} Type ${WHITE}'copy'${NC} to copy from another device"
echo -e "  ${GREEN}â€¢${NC} Type ${WHITE}'folder'${NC} to open device-pull folder"
echo -e "  ${GREEN}â€¢${NC} Type ${WHITE}'exit'${NC} to quit\n"

echo -ne "${YELLOW}${BOLD}â“ Your choice ${WHITE}â¤${NC} ${RED}"
read user_choice
echo -ne "${NC}"

case ${user_choice,,} in
    "copy")
        echo -e "\n${PURPLE}${BOLD}ğŸ”„ Copying from another device...${NC}"
        sleep 1
        clear
        bash modules/opt19
        ;;
    "folder")
        echo -e "\n${BLUE}${BOLD}ğŸ“‚ Opening device-pull folder...${NC}"
        if command -v xdg-open &>/dev/null; then
            xdg-open "device-pull"
        elif command -v open &>/dev/null; then
            open "device-pull"
        else
            echo -e "${YELLOW}${BOLD}Folder: ${WHITE}$PWD/device-pull${NC}"
        fi
        sleep 2
        clear
        bash modules/opt19
        ;;
    "exit"|"quit")
        echo -e "\n${BLUE}${BOLD}ğŸ‘‹ Exiting to shell...${NC}"
        sparkle_effect
        exit 0
        ;;
    *)
        echo -e "\n${GREEN}${BOLD}â†©ï¸  Returning to main menu...${NC}"
        loading_animation "Loading"
        sleep 0.5
        clear
        bash modules/funtion.sh
        ;;
esac