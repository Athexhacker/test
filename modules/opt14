#!/bin/bash
# Written in Bash
# "ONLY FOR EDUCATIONAL PURPOSE"
# OPTION 14: LIST ALL INSTALLED PACKAGES - ANDRO-EYE

# Color codes
RED='\033[0;91m'
GREEN='\033[0;92m'
YELLOW='\033[0;93m'
BLUE='\033[0;94m'
PURPLE='\033[0;95m'
CYAN='\033[0;96m'
WHITE='\033[0;97m'
NC='\033[0m' # No Color
BOLD='\033[1m'
UNDERLINE='\033[4m'
BLINK='\033[5m'

# Animation functions
loading_animation() {
    local message=$1
    local chars="â ‹â ™â ¹â ¸â ¼â ´â ¦â §â ‡â "
    
    echo -ne "${CYAN}${BOLD}$message ${NC}"
    for i in {1..15}; do
        for char in $(echo $chars | grep -o .); do
            echo -ne "${YELLOW}${BOLD}$char${NC}"
            sleep 0.05
            echo -ne "\b"
        done
    done
    echo -e "${GREEN}${BOLD} Done! ${NC}"
}

progress_bar() {
    local duration=$1
    local message=$2
    local width=40
    
    echo -ne "${BLUE}${BOLD}$message ${NC}"
    for ((i=0; i<=width; i++)); do
        local percent=$((i * 100 / width))
        echo -ne "\r${BLUE}${BOLD}$message ${NC}["
        for ((j=0; j<i; j++)); do echo -ne "${GREEN}â–“${NC}"; done
        for ((j=i; j<width; j++)); do echo -ne "${WHITE}â–‘${NC}"; done
        echo -ne "] ${percent}%"
        sleep $(echo "scale=2; $duration/width" | bc 2>/dev/null || echo "0.05")
    done
    echo -e "\n"
}

sparkle_effect() {
    echo -ne "${YELLOW}"
    for i in {1..15}; do
        echo -ne "âœ¦"
        sleep 0.03
    done
    echo -e "${NC}"
}

pulse_message() {
    local message=$1
    local color=$2
    
    for i in {1..3}; do
        echo -ne "${color}${BOLD}$message${NC}"
        sleep 0.2
        echo -ne "\r"
        for j in $(seq 1 ${#message}); do
            echo -n " "
        done
        echo -ne "\r"
        sleep 0.2
    done
    echo -e "${color}${BOLD}$message${NC}"
}

# Function to display device in a box
display_device_box() {
    local number=$1
    local device=$2
    local model=$3
    local status=$4
    
    echo -e "${YELLOW}${BOLD}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}  ${GREEN}${BOLD}DEVICE #${number}${NC}                                        ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${CYAN}ID:${NC} ${WHITE}${device:0:15}...${NC}                     ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${PURPLE}Model:${NC} ${WHITE}$model${NC}                                 ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${BLUE}Status:${NC} $status                           ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
}

# Function to list packages with options
list_packages() {
    local device=$1
    local model=$2
    local device_num=$3
    
    echo -e "\n${YELLOW}${BOLD}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo -e "${PURPLE}${BOLD}ğŸ“‹ Listing packages for:${NC}"
    display_device_box "$device_num" "$device" "$model" "${GREEN}â— Processing${NC}"
    
    # Check device connection
    echo -e "\n${BLUE}${BOLD}ğŸ” Verifying device connection...${NC}"
    if ! adb -s "$device" get-state &>/dev/null; then
        pulse_message "âŒ Device not responding!" "${RED}"
        return 1
    fi
    echo -e "${GREEN}${BOLD}âœ“ Device connected${NC}"
    
    # Package list options
    echo -e "\n${CYAN}${BOLD}ğŸ“¦ Package List Options:${NC}"
    echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    echo -e "  ${GREEN}1.${NC} ${WHITE}All packages${NC}"
    echo -e "  ${GREEN}2.${NC} ${WHITE}Third-party packages only${NC}"
    echo -e "  ${GREEN}3.${NC} ${WHITE}System packages only${NC}"
    echo -e "  ${GREEN}4.${NC} ${WHITE}Search for a package${NC}"
    echo -e "  ${GREEN}5.${NC} ${WHITE}Save list to file${NC}"
    echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}\n"
    
    echo -ne "${YELLOW}${BOLD}Select option (1-5) ${WHITE}â¤${NC} ${RED}"
    read pkg_option
    echo -ne "${NC}"
    
    local cmd="pm list packages"
    local output_file=""
    local filter_desc=""
    
    case $pkg_option in
        1)
            cmd="pm list packages"
            filter_desc="all packages"
            ;;
        2)
            cmd="pm list packages -3"
            filter_desc="third-party packages"
            ;;
        3)
            cmd="pm list packages -s"
            filter_desc="system packages"
            ;;
        4)
            echo -ne "\n${CYAN}${BOLD}Enter search term ${WHITE}â¤${NC} ${RED}"
            read search_term
            echo -ne "${NC}"
            cmd="pm list packages | grep -i $search_term"
            filter_desc="packages matching '$search_term'"
            ;;
        5)
            filter_desc="all packages (saved to file)"
            ;;
        *)
            pulse_message "âŒ Invalid option! Showing all packages" "${RED}"
            cmd="pm list packages"
            filter_desc="all packages"
            ;;
    esac
    
    echo -e "\n${BLUE}${BOLD}ğŸ” Fetching $filter_desc from ${WHITE}$model${NC}..."
    loading_animation "Please wait"
    
    # Create temp file for package list
    local temp_file=".temp/pkg_list_$$.txt"
    
    if [ "$pkg_option" == "5" ]; then
        # Save to file option
        adb -s "$device" shell "pm list packages -f" 2>/dev/null > "$temp_file"
    else
        # Execute the command
        if [ "$pkg_option" == "4" ]; then
            adb -s "$device" shell "pm list packages" 2>/dev/null | grep -i "$search_term" > "$temp_file"
        else
            adb -s "$device" shell "$cmd" 2>/dev/null > "$temp_file"
        fi
    fi
    
    if [ -s "$temp_file" ]; then
        # Process the package list
        local pkg_count=$(wc -l < "$temp_file")
        
        # Extract package names (remove 'package:' prefix)
        sed -i 's/package://g' "$temp_file"
        
        # Sort the list
        sort -o "$temp_file" "$temp_file"
        
        echo -e "\n${GREEN}${BOLD}âœ… Found ${WHITE}$pkg_count${GREEN} packages${NC}"
        
        # Show sample (first 10 packages)
        echo -e "\n${CYAN}${BOLD}ğŸ“‹ Sample (first 10 packages):${NC}"
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
        head -10 "$temp_file" | while read pkg; do
            echo -e "  ${GREEN}â€¢${NC} ${WHITE}$pkg${NC}"
        done
        
        if [ $pkg_count -gt 10 ]; then
            echo -e "  ${YELLOW}... and $(($pkg_count - 10)) more${NC}"
        fi
        echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}\n"
        
        # Options for the list
        echo -e "${CYAN}${BOLD}ğŸ“Œ What would you like to do?${NC}"
        echo -e "  ${GREEN}1.${NC} ${WHITE}View full list (with pagination)${NC}"
        echo -e "  ${GREEN}2.${NC} ${WHITE}Search within results${NC}"
        echo -e "  ${GREEN}3.${NC} ${WHITE}Save to file${NC}"
        echo -e "  ${GREEN}4.${NC} ${WHITE}Count packages by prefix${NC}"
        echo -e "  ${GREEN}5.${NC} ${WHITE}Export to CSV${NC}"
        echo -e "  ${GREEN}6.${NC} ${WHITE}Done${NC}\n"
        
        echo -ne "${YELLOW}${BOLD}Select option (1-6) ${WHITE}â¤${NC} ${RED}"
        read view_option
        echo -ne "${NC}"
        
        case $view_option in
            1)
                echo -e "\n${BLUE}${BOLD}ğŸ“„ Full package list (press 'q' to exit)${NC}\n"
                if command -v less &>/dev/null; then
                    less "$temp_file"
                else
                    cat "$temp_file" | more
                fi
                ;;
            2)
                echo -ne "\n${CYAN}${BOLD}Enter search term ${WHITE}â¤${NC} ${RED}"
                read search_inner
                echo -ne "${NC}"
                echo -e "\n${BLUE}${BOLD}ğŸ” Results containing '${WHITE}$search_inner${BLUE}':${NC}\n"
                grep -i "$search_inner" "$temp_file" | while read line; do
                    echo -e "  ${GREEN}â€¢${NC} ${WHITE}$line${NC}"
                done | less
                ;;
            3)
                local timestamp=$(date +"%Y%m%d_%H%M%S")
                local save_file="package-lists/${model}-packages-${timestamp}.txt"
                mkdir -p package-lists 2>/dev/null
                cp "$temp_file" "$save_file"
                echo -e "\n${GREEN}${BOLD}âœ… Package list saved to: ${WHITE}$save_file${NC}"
                echo -e "${YELLOW}${BOLD}ğŸ“Š Total packages: ${WHITE}$pkg_count${NC}"
                ;;
            4)
                echo -e "\n${CYAN}${BOLD}ğŸ“Š Package count by prefix:${NC}"
                echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
                cut -c1-3 "$temp_file" | sort | uniq -c | sort -rn | head -20 | while read count prefix; do
                    echo -e "  ${GREEN}${prefix}${NC} : ${YELLOW}$count${NC} packages"
                done
                echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
                ;;
            5)
                local csv_file="package-lists/${model}-packages-$(date +"%Y%m%d_%H%M%S").csv"
                mkdir -p package-lists 2>/dev/null
                echo "Package Name" > "$csv_file"
                cat "$temp_file" >> "$csv_file"
                echo -e "\n${GREEN}${BOLD}âœ… CSV file saved to: ${WHITE}$csv_file${NC}"
                ;;
            6)
                echo -e "\n${BLUE}${BOLD}â© Done viewing packages${NC}"
                ;;
        esac
        
        # Cleanup
        rm -f "$temp_file"
        
    else
        echo -e "\n${RED}${BOLD}âŒ No packages found or device error${NC}"
    fi
    
    sparkle_effect
}

# Clear screen and show banner
clear
echo -e "${GREEN}${BOLD}"
cat << "EOF"
    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
    â•‘  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—  â–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â•‘
    â•‘  â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•‘ â–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â•â•â• â–ˆâ–ˆâ•”â•â•â•â•â•â•‘
    â•‘  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â• â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â•‘
    â•‘  â–ˆâ–ˆâ•”â•â•â•â• â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•— â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•  â•‘
    â•‘  â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â•‘
    â•‘  â•šâ•â•     â•šâ•â•  â•šâ•â• â•šâ•â•â•â•â•â•â•šâ•â•  â•šâ•â•â•šâ•â•  â•šâ•â• â•šâ•â•â•â•â•â• â•šâ•â•â•â•â•â•â•â•‘
    â•‘                                                          â•‘
    â•‘        ğŸ“¦ ${PURPLE}PACKAGE LISTER${GREEN} - ${CYAN}Installed Applications Viewer${GREEN}      â•‘
    â•‘                                                          â•‘
    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
EOF
echo -e "${NC}"
sparkle_effect

# Create necessary directories
mkdir -p .temp package-lists 2>/dev/null

## DEVICE ID EXTRACT ##
echo -e "\n${BLUE}${BOLD}ğŸ” Scanning for connected devices...${NC}"
loading_animation "Detecting devices"

# Check if ADB is working
if ! command -v adb &> /dev/null; then
    pulse_message "âŒ ADB not found! Please install ADB first." "${RED}"
    sleep 2
    bash modules/funtion.sh
    exit 1
fi

adb devices | sed -n '2,$p' | awk '{ print $1 }' > .temp/dev_list_temp 2>/dev/null

# Check if any devices found
if [ ! -s ".temp/dev_list_temp" ]; then
    echo -e "\n${RED}${BOLD}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${RED}${BOLD}â”‚${NC}  ${RED}${BLINK}âš ï¸${NC}  ${WHITE}NO DEVICES CONNECTED${NC}                       ${RED}${BOLD}â”‚${NC}"
    echo -e "${RED}${BOLD}â”‚${NC}      ${CYAN}Please connect a device to list packages${NC}                ${RED}${BOLD}â”‚${NC}"
    echo -e "${RED}${BOLD}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    
    echo -e "\n${YELLOW}${BOLD}Press Enter to return to main menu...${NC}"
    read
    clear
    bash modules/funtion.sh
    exit 0
fi

# Read devices into array properly
mapfile -t dev < .temp/dev_list_temp 2>/dev/null

# Assign device variables with null checking
dev_1="${dev[0]:-}"
dev_2="${dev[1]:-}"
dev_3="${dev[2]:-}"

## DEVICE MODEL EXTRACT ##
adb devices -l | grep "model:" > .temp/dev_list_model_temp 2>/dev/null

# Extract models properly
mod_1=""
mod_2=""
mod_3=""

if [ -s ".temp/dev_list_model_temp" ]; then
    mapfile -t model_lines < .temp/dev_list_model_temp
    
    for i in "${!model_lines[@]}"; do
        model=$(echo "${model_lines[$i]}" | grep -o 'model:[^ ]*' | cut -d':' -f2)
        
        case $i in
            0) mod_1="$model" ;;
            1) mod_2="$model" ;;
            2) mod_3="$model" ;;
        esac
    done
fi

# Proper device count logic
total_dev=0
[ -n "$dev_1" ] && total_dev=1
[ -n "$dev_2" ] && total_dev=2
[ -n "$dev_3" ] && total_dev=3

# Main device selection logic
echo -e "\n${GREEN}${BOLD}âœ… Scan Complete! Found ${WHITE}$total_dev${GREEN} device(s)${NC}\n"

# Show existing package lists
if [ -d "package-lists" ] && [ "$(ls -A package-lists/ 2>/dev/null)" ]; then
    echo -e "${CYAN}${BOLD}ğŸ“ Existing package lists:${NC}"
    ls -lh package-lists/ | tail -n +2 | head -5 | while read line; do
        echo -e "  ${GREEN}â€¢${NC} ${WHITE}$line${NC}"
    done
    echo -e "  ${YELLOW}(Use 'lists' option after viewing)${NC}\n"
fi

case $total_dev in
    1)
        echo -e "${YELLOW}${BOLD}ğŸ“± Single device detected:${NC}\n"
        display_device_box "1" "$dev_1" "${mod_1:-Unknown}" "${GREEN}â— Ready${NC}"
        
        echo -e "\n${CYAN}${BOLD}Starting package lister...${NC}"
        sleep 1
        list_packages "$dev_1" "${mod_1:-Unknown}" "1"
        ;;
        
    2)
        echo -e "${YELLOW}${BOLD}ğŸ“± Multiple devices detected:${NC}\n"
        display_device_box "1" "$dev_1" "${mod_1:-Unknown}" "${GREEN}â— Ready${NC}"
        echo
        display_device_box "2" "$dev_2" "${mod_2:-Unknown}" "${GREEN}â— Ready${NC}"
        
        echo -e "\n${CYAN}${BOLD}Select device to list packages:${NC}"
        while true; do
            echo -ne "\n${YELLOW}${BOLD}Enter device number (1-2) ${WHITE}â¤${NC} ${RED}"
            read options
            echo -ne "${NC}"
            
            case $options in
                1)
                    list_packages "$dev_1" "${mod_1:-Unknown}" "1"
                    break
                    ;;
                2)
                    list_packages "$dev_2" "${mod_2:-Unknown}" "2"
                    break
                    ;;
                *)
                    pulse_message "âŒ Invalid option! Choose 1 or 2" "${RED}"
                    ;;
            esac
        done
        ;;
        
    3)
        echo -e "${YELLOW}${BOLD}ğŸ“± Multiple devices detected:${NC}\n"
        display_device_box "1" "$dev_1" "${mod_1:-Unknown}" "${GREEN}â— Ready${NC}"
        echo
        display_device_box "2" "$dev_2" "${mod_2:-Unknown}" "${GREEN}â— Ready${NC}"
        echo
        display_device_box "3" "$dev_3" "${mod_3:-Unknown}" "${GREEN}â— Ready${NC}"
        
        echo -e "\n${CYAN}${BOLD}Select device to list packages:${NC}"
        while true; do
            echo -ne "\n${YELLOW}${BOLD}Enter device number (1-3) ${WHITE}â¤${NC} ${RED}"
            read options
            echo -ne "${NC}"
            
            case $options in
                1)
                    list_packages "$dev_1" "${mod_1:-Unknown}" "1"
                    break
                    ;;
                2)
                    list_packages "$dev_2" "${mod_2:-Unknown}" "2"
                    break
                    ;;
                3)
                    list_packages "$dev_3" "${mod_3:-Unknown}" "3"
                    break
                    ;;
                *)
                    pulse_message "âŒ Invalid option! Choose 1-3" "${RED}"
                    ;;
            esac
        done
        ;;
esac

# Clean up temp files
rm -f .temp/dev_list_temp .temp/dev_list_model_temp .temp/pkg_list_*.txt 2>/dev/null

# Return options
echo -e "\n${YELLOW}${BOLD}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e "${CYAN}${BOLD}â Options:${NC}"
echo -e "  ${GREEN}â€¢${NC} Press ${WHITE}ENTER${NC} to return to main menu"
echo -e "  ${GREEN}â€¢${NC} Type ${WHITE}'list'${NC} to list packages from another device"
echo -e "  ${GREEN}â€¢${NC} Type ${WHITE}'lists'${NC} to view saved package lists"
echo -e "  ${GREEN}â€¢${NC} Type ${WHITE}'exit'${NC} to quit\n"

echo -ne "${YELLOW}${BOLD}â“ Your choice ${WHITE}â¤${NC} ${RED}"
read user_choice
echo -ne "${NC}"

case ${user_choice,,} in
    "list")
        echo -e "\n${PURPLE}${BOLD}ğŸ”„ Restarting package lister...${NC}"
        sleep 1
        clear
        bash modules/opt14
        ;;
    "lists")
        echo -e "\n${BLUE}${BOLD}ğŸ“ Saved package lists:${NC}"
        if [ -d "package-lists" ] && [ "$(ls -A package-lists/)" ]; then
            ls -lh package-lists/
        else
            echo -e "${YELLOW}No saved lists found${NC}"
        fi
        echo -e "\n${YELLOW}${BOLD}Press Enter to continue...${NC}"
        read
        clear
        bash modules/opt14
        ;;
    "exit"|"quit")
        echo -e "\n${BLUE}${BOLD}ğŸ‘‹ Exiting to shell...${NC}"
        sparkle_effect
        exit 0
        ;;
    *)
        echo -e "\n${GREEN}${BOLD}â†©ï¸  Returning to main menu...${NC}"
        loading_animation "Loading"
        sleep 0.5
        clear
        bash modules/funtion.sh
        ;;
esac