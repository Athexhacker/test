#!/bin/bash
# Written in Bash
# "ONLY FOR EDUCATIONAL PURPOSE"
# OPTION 29: SEND SMS FROM PHONE - ANDRO-EYE

# Color codes
RED='\033[0;91m'
GREEN='\033[0;92m'
YELLOW='\033[0;93m'
BLUE='\033[0;94m'
PURPLE='\033[0;95m'
CYAN='\033[0;96m'
WHITE='\033[0;97m'
NC='\033[0m' # No Color
BOLD='\033[1m'
UNDERLINE='\033[4m'
BLINK='\033[5m'

# Animation functions
loading_animation() {
    local message=$1
    local chars="â ‹â ™â ¹â ¸â ¼â ´â ¦â §â ‡â "
    
    echo -ne "${CYAN}${BOLD}$message ${NC}"
    for i in {1..15}; do
        for char in $(echo $chars | grep -o .); do
            echo -ne "${YELLOW}${BOLD}$char${NC}"
            sleep 0.05
            echo -ne "\b"
        done
    done
    echo -e "${GREEN}${BOLD} Done! ${NC}"
}

progress_bar() {
    local duration=$1
    local message=$2
    local width=40
    
    echo -ne "${BLUE}${BOLD}$message ${NC}"
    for ((i=0; i<=width; i++)); do
        local percent=$((i * 100 / width))
        echo -ne "\r${BLUE}${BOLD}$message ${NC}["
        for ((j=0; j<i; j++)); do echo -ne "${GREEN}â–“${NC}"; done
        for ((j=i; j<width; j++)); do echo -ne "${WHITE}â–‘${NC}"; done
        echo -ne "] ${percent}%"
        sleep $(echo "scale=2; $duration/width" | bc 2>/dev/null || echo "0.05")
    done
    echo -e "\n"
}

sparkle_effect() {
    echo -ne "${YELLOW}"
    for i in {1..15}; do
        echo -ne "âœ¦"
        sleep 0.03
    done
    echo -e "${NC}"
}

pulse_message() {
    local message=$1
    local color=$2
    
    for i in {1..3}; do
        echo -ne "${color}${BOLD}$message${NC}"
        sleep 0.2
        echo -ne "\r"
        for j in $(seq 1 ${#message}); do
            echo -n " "
        done
        echo -ne "\r"
        sleep 0.2
    done
    echo -e "${color}${BOLD}$message${NC}"
}

# Function to display device in a box
display_device_box() {
    local number=$1
    local device=$2
    local model=$3
    local status=$4
    
    echo -e "${YELLOW}${BOLD}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}  ${GREEN}${BOLD}DEVICE #${number}${NC}                                        ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${CYAN}ID:${NC} ${WHITE}${device:0:15}...${NC}                     ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${PURPLE}Model:${NC} ${WHITE}$model${NC}                                 ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â”‚${NC}      ${BLUE}Status:${NC} $status                           ${YELLOW}â”‚${NC}"
    echo -e "${YELLOW}${BOLD}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
}

# Function to validate phone number
validate_phone() {
    local phone=$1
    # Remove any non-digit characters
    phone=$(echo "$phone" | tr -cd '0-9+')
    
    # Basic validation
    if [[ ${#phone} -lt 10 ]]; then
        return 1
    fi
    
    # Check if it starts with + or is just digits
    if [[ $phone =~ ^\+[0-9]{10,15}$ ]] || [[ $phone =~ ^[0-9]{10,15}$ ]]; then
        return 0
    else
        return 1
    fi
}

# Function to format phone number display
format_phone() {
    local phone=$1
    if [[ $phone =~ ^\+ ]]; then
        echo "$phone"
    else
        echo "+$phone"
    fi
}

# Function to take phone number with validation
phone_no_take() {
    while true; do
        echo -ne "\n${YELLOW}${BOLD}ğŸ“ Enter phone number (with country code) ${WHITE}â¤${NC} ${RED}"
        read phone_no
        echo -ne "${NC}"
        
        if [ -z "$phone_no" ]; then
            pulse_message "âŒ Phone number cannot be empty!" "${RED}"
        elif ! validate_phone "$phone_no"; then
            pulse_message "âŒ Invalid phone number! Use format: +1234567890 or 1234567890" "${RED}"
        else
            # Format phone number for display
            local formatted=$(format_phone "$phone_no")
            echo -e "${GREEN}${BOLD}âœ“ Valid phone number: ${WHITE}$formatted${NC}"
            break
        fi
    done
}

# Function to take SMS body
sms_body_take() {
    echo -e "\n${CYAN}${BOLD}ğŸ“ Compose your message:${NC}"
    echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    echo -e "${YELLOW}${BOLD}ğŸ’¡ Max 160 characters for single SMS${NC}"
    echo -e "${YELLOW}${BOLD}ğŸ’¡ Longer messages will be split${NC}"
    echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}\n"
    
    while true; do
        echo -ne "${YELLOW}${BOLD}ğŸ’¬ Message ${WHITE}â¤${NC} ${GREEN}"
        read -e sms_body
        echo -ne "${NC}"
        
        if [ -z "$sms_body" ]; then
            pulse_message "âŒ Message cannot be empty!" "${RED}"
        else
            local msg_length=${#sms_body}
            local sms_count=$(( (msg_length + 152) / 153 ))
            
            echo -e "\n${CYAN}${BOLD}ğŸ“Š Message stats:${NC}"
            echo -e "  ${GREEN}â€¢${NC} ${WHITE}Length: ${YELLOW}$msg_length characters${NC}"
            echo -e "  ${GREEN}â€¢${NC} ${WHITE}SMS parts: ${YELLOW}$sms_count${NC}"
            
            if [ $sms_count -gt 1 ]; then
                echo -e "  ${YELLOW}âš ï¸  Message will be sent as $sms_count SMS messages${NC}"
            fi
            
            # Show preview
            echo -e "\n${PURPLE}${BOLD}Preview:${NC}"
            echo -e "  ${WHITE}\"${sms_body:0:50}${sms_body:50+}\"${NC}"
            
            echo -ne "\n${YELLOW}${BOLD}â“ Send this message? ${WHITE}(Y/n) ${YELLOW}â¤ ${RED}"
            read confirm_msg
            echo -ne "${NC}"
            
            case ${confirm_msg,,} in
                n|no)
                    echo -e "\n${BLUE}${BOLD}â© Edit message again${NC}"
                    ;;
                *)
                    break
                    ;;
            esac
        fi
    done
}

# Function to send SMS with animation
send_sms() {
    local device=$1
    local model=$2
    local phone=$3
    local message=$4
    
    echo -e "\n${YELLOW}${BOLD}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo -e "${PURPLE}${BOLD}ğŸ“± Sending SMS from:${NC}"
    display_device_box "-" "$device" "$model" "${GREEN}â— Ready${NC}"
    
    # Check device connection
    echo -e "\n${BLUE}${BOLD}ğŸ” Verifying device connection...${NC}"
    if ! adb -s "$device" get-state &>/dev/null; then
        pulse_message "âŒ Device not responding!" "${RED}"
        return 1
    fi
    echo -e "${GREEN}${BOLD}âœ“ Device connected${NC}"
    
    # Check if device has SMS capability
    echo -e "\n${BLUE}${BOLD}ğŸ” Checking SMS capability...${NC}"
    if ! adb -s "$device" shell pm list packages | grep -q "com.android.mms"; then
        echo -e "${YELLOW}${BOLD}âš ï¸  SMS app may not be available${NC}"
    else
        echo -e "${GREEN}${BOLD}âœ“ SMS app detected${NC}"
    fi
    
    # Show SMS details
    echo -e "\n${CYAN}${BOLD}ğŸ“‹ SMS Details:${NC}"
    echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    echo -e "  ${GREEN}â€¢${NC} ${WHITE}To: ${YELLOW}$(format_phone "$phone")${NC}"
    echo -e "  ${GREEN}â€¢${NC} ${WHITE}From device: ${YELLOW}$model${NC}"
    echo -e "  ${GREEN}â€¢${NC} ${WHITE}Message: ${YELLOW}\"${message:0:50}${message:50+}\"${NC}"
    echo -e "${BLUE}${BOLD}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    
    # Final confirmation
    echo -ne "\n${YELLOW}${BOLD}â“ Send SMS now? ${WHITE}(Y/n) ${YELLOW}â¤ ${RED}"
    read final_confirm
    echo -ne "${NC}"
    
    case ${final_confirm,,} in
        n|no)
            echo -e "\n${BLUE}${BOLD}â© SMS sending cancelled${NC}"
            return 0
            ;;
    esac
    
    # Sending animation
    echo -e "\n${CYAN}${BOLD}ğŸ“¤ Sending SMS...${NC}\n"
    
    local spin='-\|/'
    for i in {1..20}; do
        printf "\r${YELLOW}${BOLD}â³ Preparing message ${spin:$((i%4)):1} ${NC}"
        sleep 0.1
    done
    
    # Open SMS app and compose
    printf "\r${YELLOW}${BOLD}ğŸ“± Opening messaging app...   ${NC}"
    adb -s "$device" shell am start -a android.intent.action.SENDTO -d sms:$phone --es sms_body "$message" --ez exit_on_sent true > /dev/null 2>&1
    sleep 1
    
    printf "\r${YELLOW}${BOLD}âŒ¨ï¸  Typing message...         ${NC}"
    sleep 1
    
    # Navigate and send
    printf "\r${YELLOW}${BOLD}â¡ï¸  Navigating to send...     ${NC}"
    adb -s "$device" shell input keyevent 22 > /dev/null 2>&1  # Right arrow
    sleep 0.5
    adb -s "$device" shell input keyevent 66 > /dev/null 2>&1  # Enter
    
    printf "\r${GREEN}${BOLD}âœ… SMS sent successfully!      ${NC}\n\n"
    
    # Send confirmation
    echo -e "${GREEN}${BOLD}âœ“ Message sent to ${WHITE}$(format_phone "$phone")${NC}"
    
    # Show message preview
    echo -e "\n${CYAN}${BOLD}ğŸ“ Sent message:${NC}"
    echo -e "  ${WHITE}\"$message\"${NC}"
    
    sparkle_effect
}

